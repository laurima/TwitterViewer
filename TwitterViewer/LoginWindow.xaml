<Window x:Class="TwitterViewer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterViewer"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300"
        Background="#55acee">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="btn_openAuthUrl" Margin="0, 50, 0, 0" Width="150" Background="#e1e8ed" FontWeight="DemiBold" Click="btn_openAuthUrl_Click">Open authentication page</Button>
            <TextBlock Width="60" Padding="0, 50, 0, 0" FontSize="14" FontWeight="DemiBold">Pin code</TextBlock>
            <TextBox x:Name="tb_pincode" Width="100"></TextBox>
            <Button x:Name="btn_login" Margin="0, 10, 0, 0" Width="50" Background="#e1e8ed" FontWeight="DemiBold" Click="btn_login_Click">Login</Button>
        </StackPanel>
    </Grid>
</Window>