<Window x:Class="TwitterViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" MinWidth="400" MaxWidth="1400">

    <Window.Resources>
        <DataTemplate x:Key="tweetTemplate">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="img_selectedtweetsimg" 
                       Stretch="Fill" 
                       Height="32" 
                       Width="32" 
                       VerticalAlignment="Center" 
                       Source="{Binding User.Profilepic}">
                </Image>
                <TextBlock x:Name="tb_selectedtweetsuser"
                           
                           Text="{Binding User.Screenname}"
                           Margin="5,0,5,0" 
                           VerticalAlignment="Center" 
                           MinWidth="100"
                           />
                
                <TextBlock x:Name="tb_selectedtweets" 
                           Text="{Binding Message}"  
                           VerticalAlignment="Center" 
                           MaxWidth="600" 
                           TextWrapping="Wrap"
                           />
                
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="followerTemplate">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="img_followedimg" 
                       Stretch="Fill" 
                       Height="32" 
                       Width="32" 
                       VerticalAlignment="Center"
                       Source="{Binding Profilepic}">
                </Image>
                <TextBlock x:Name="tb_followedusers" 
                           VerticalAlignment="Center"
                           Text="{Binding Screenname}" 
                           />
            </StackPanel>
        </DataTemplate>
        <Style x:Key="listStyle" TargetType="ListBox">
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" MinWidth="800">
            <StackPanel Orientation="Vertical">
                <!-- Followed twitter users appears here -->
                <ListView Style="{StaticResource listStyle}" 
                          x:Name="lw_followedusers" 
                          ItemTemplate="{StaticResource followerTemplate}"
                          MinWidth="100" 
                          />
            </StackPanel>
            <StackPanel Orientation="Vertical" MinWidth="100" MaxWidth="200">
                <!-- Categories appears here -->
                <ListBox Style="{StaticResource listStyle}" 
                         x:Name="lb_categories"
                         ItemsSource="{Binding}"
                         />
                <Button x:Name="btn_editcategories" 
                        Content="Edit Categories" 
                        VerticalAlignment="Bottom" 
                        MaxWidth="100"
                        Click="btn_editcategories_Click"
                        />
            </StackPanel>
            <StackPanel Orientation="Vertical" MinWidth="100" MaxWidth="900" >
                <!-- Tweets by selected user or category appears here -->
                <ListView x:Name="lw_selectedtweets" 
                          Style="{StaticResource listStyle}" 
                          ItemTemplate="{StaticResource tweetTemplate}">
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
