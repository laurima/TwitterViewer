<Window x:Class="TwitterViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" MinWidth="400" MaxWidth="1900">

    <Window.Resources>
        <Style x:Key="listStyle" TargetType="ListBox">
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" MinWidth="800">
            <StackPanel Orientation="Vertical">
                <!-- Followed twitter users appears here -->
                <ListView Style="{StaticResource listStyle}" 
                          x:Name="lw_followedusers" 
                          ItemsSource="{Binding}"
                          MinWidth="100" 
                          RenderOptions.BitmapScalingMode="LowQuality"
                          VerticalAlignment="Top"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" MinWidth="100" MaxWidth="200">
                <!-- Categories appears here -->
                <ListBox Style="{StaticResource listStyle}" 
                         x:Name="lb_categories" 
                         ItemsSource="{Binding}" />
                <Button x:Name="btn_editcategories" 
                        Content="Edit Categories" 
                        VerticalAlignment="Bottom" 
                        MaxWidth="100"
                        Click="btn_editcategories_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" MinWidth="100" MaxWidth="900" >
                <!-- Tweets by selected user or category appears here -->
                <ListView Style="{StaticResource listStyle}">
                    <ListViewItem>
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="img_selectedtweetsimg"></Image>
                            <TextBlock x:Name="tb_selectedtweets"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                     
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
